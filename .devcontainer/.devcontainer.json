{
  "name": "dash-dev",
  "image": "mbhband/for_learning_plotly:latest",
  "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind",
  "workspaceFolder": "/app",

  "runArgs": ["-p", "8050:8050"],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "remoteUser": "root",
  "overrideCommand": true,
  "postCreateCommand": "sleep infinity"
}
